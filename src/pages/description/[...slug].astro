---
import DescriptionLayout from "@layouts/DescriptionLayout.astro";
import { getEntryBySlug } from "astro:content";

const {slug} = Astro.params;

if (slug === undefined) {
	return Astro.redirect("/404");
}

const entry = await getEntryBySlug("description", slug);
if (entry === undefined) {
	return Astro.redirect("/404");
}

const { Content } = await entry.render();

---

<DescriptionLayout frontmatter={entry.data}>
  <Content />
</DescriptionLayout>
